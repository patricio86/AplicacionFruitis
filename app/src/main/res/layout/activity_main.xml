<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="#E3D030"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eliminar"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-black"
        android:text="BBDD The Fruiti"
        android:textColor="#AF0B0B"
        android:textSize="20sp" />

    <Button
        android:id="@+id/insertar"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="-67dp"
        android:layout_toLeftOf="@id/imageView"
        android:text="Insertar" />

    <Button
        android:id="@+id/listado1"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/insertar"
        android:text="Listar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="161dp"
        android:layout_height="130dp"
        android:layout_above="@id/insertar"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-5dp"
        app:srcCompat="@drawable/pixlr_bg_result" />

    <Button
        android:id="@+id/eliminar"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/listado1"
        android:layout_centerInParent="true"
        android:layout_marginLeft="120dp"
        android:text="Eliminar" />
</RelativeLayout>